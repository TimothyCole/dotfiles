font-1 = "UbuntuMono Nerd Font:size=22;4"
font-2 = "Font Awesome 5 Free:style=Regular:pixelsize=10;1"
font-3 = "Font Awesome 5 Free:style=Solid:pixelsize=10;1"
font-4 = "Font Awesome 5 Brands:pixelsize=10;1"

modules-left = i3
modules-center = arrowclock1 date arrowclock2
modules-right = arrow1 networkup networkdown arrow2 memory cpu arrow3 volume arrow4 powermenu

tray-position = right
