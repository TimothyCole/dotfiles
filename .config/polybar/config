[module/powermenu]
type = custom/menu
expand-right = true
format-padding = 1
format-foreground = ${colors.foreground}
format-background = #323642

label-open = ""
label-open-padding = 2
label-open-font = 4

label-close = ""
label-close-padding = 2
label-close-font = 4

menu-0-0 = reboot
menu-0-0-padding = 2
menu-0-0-exec = i3-nagbar -t warning -m 'Are you sure you want to reboot?' -B 'Yes, Reboot' 'shutdown -r now'
menu-0-1 = power off
menu-0-1-padding = 2
menu-0-1-exec = i3-nagbar -t warning -m 'Are you sure you want to shutdown?' -B 'Yes, Shutdown' 'shutdown now'

